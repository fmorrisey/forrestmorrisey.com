---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroBanner from "../components/HeroBanner.astro";
import CardGrid from "../components/CardGrid.astro";
---

<BaseLayout title="Social — Forrest Morrisey" fullWidth={true}>
  <HeroBanner 
    title="Social Feeds"
    subtitle="Connect with me across the internet"
    height="medium"
  />

  <section class="section">
    <div class="container-wide">
      <CardGrid columns={2}>
        <!-- Personal / Photography -->
        <div class="social-card card">
          <div class="social-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </div>
          <h3>@forrestmorrisey</h3>
          <p class="muted">Personal and photography — Adventure shots, landscapes, and behind-the-scenes moments from my journeys.</p>
          <a href="https://instagram.com/forrestmorrisey" target="_blank" rel="noopener noreferrer" class="btn btn-outline btn-pill">
            Follow on Instagram
          </a>
        </div>

        <!-- Code / Dev Journey -->
        <div class="social-card card">
          <div class="social-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </div>
          <h3>@CodeForrestCode</h3>
          <p class="muted">Full-stack and UX/UI journey — Code snippets, project progress, and developer life.</p>
          <div class="social-links">
            <a href="https://instagram.com/codeforrestcode" target="_blank" rel="noopener noreferrer" class="btn btn-outline btn-pill">
              Follow on Instagram
            </a>
            <a href="https://github.com/fmorrisey" target="_blank" rel="noopener noreferrer" class="btn btn-outline btn-pill">
              GitHub
            </a>
          </div>
        </div>

        <!-- Cycling -->
        <div class="social-card card">
          <div class="social-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </div>
          <h3>@BikeForrestBike</h3>
          <p class="muted">Cycling adventures — Ultra-endurance rides, gravel grinding, and two-wheeled explorations.</p>
          <a href="https://instagram.com/bikeforrestbike" target="_blank" rel="noopener noreferrer" class="btn btn-outline btn-pill">
            Follow on Instagram
          </a>
        </div>

        <!-- Screen Printing / Art -->
        <div class="social-card card">
          <div class="social-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </div>
          <h3>@Joy_of_Inking</h3>
          <p class="muted">Screen printing, art, and design — The joy of putting ink to substrate, one pull at a time.</p>
          <a href="https://instagram.com/joy_of_inking" target="_blank" rel="noopener noreferrer" class="btn btn-outline btn-pill">
            Follow on Instagram
          </a>
        </div>
      </CardGrid>

      <!-- Professional Links -->
      <div class="professional-links">
        <h2 class="text-center">Professional</h2>
        <div class="link-row">
          <a href="https://linkedin.com/in/forrestmorrisey" target="_blank" rel="noopener noreferrer" class="btn btn-outline btn-pill">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: middle; margin-right: 8px;">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
            LinkedIn
          </a>
          <a href="https://github.com/fmorrisey" target="_blank" rel="noopener noreferrer" class="btn btn-outline btn-pill">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: middle; margin-right: 8px;">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
            GitHub
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .social-card {
    text-align: center;
    padding: var(--space-lg);
  }

  .social-icon {
    margin-bottom: var(--space-md);
    color: var(--accent);
  }

  .social-card h3 {
    margin-bottom: var(--space-sm);
    font-size: 1.25rem;
  }

  .social-card p {
    margin-bottom: var(--space-md);
    font-size: 0.9rem;
  }

  .social-links {
    display: flex;
    gap: var(--space-sm);
    justify-content: center;
    flex-wrap: wrap;
  }

  .professional-links {
    margin-top: var(--space-xl);
    text-align: center;
  }

  .professional-links h2 {
    margin-bottom: var(--space-md);
    font-size: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--muted);
  }

  .link-row {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }
</style>
