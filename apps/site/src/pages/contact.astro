---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroBanner from "../components/HeroBanner.astro";
---

<BaseLayout title="Services & Contact — Forrest Morrisey" fullWidth={true}>
  <HeroBanner 
    title="Services & Contact"
    subtitle="Let's create something together"
    height="small"
  />

  <section class="section">
    <div class="container">
      <div class="contact-content">
        <div class="contact-intro text-center mb-lg">
          <p class="muted">
            I'm always open to questions, inquiries, and collaboration opportunities.<br/>
            Whether you need development work, design consultation, or photography — I'm here to help.
          </p>
          <p class="muted" style="margin-top: var(--space-sm);">
            <strong>Nothing is too small or too big.</strong><br/>
            Sliding-scale rates available. Let's talk about your project.
          </p>
        </div>

        <form class="contact-form card" action="#" method="POST">
          <div class="form-group">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" name="name" class="form-input" required />
          </div>

          <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-input" required />
          </div>

          <div class="form-group">
            <label for="subject" class="form-label">Subject</label>
            <input type="text" id="subject" name="subject" class="form-input" />
          </div>

          <div class="form-group">
            <label for="message" class="form-label">Message</label>
            <textarea id="message" name="message" class="form-textarea" rows="6" required></textarea>
          </div>

          <div class="form-group text-center">
            <button type="submit" class="btn btn-primary btn-pill">Send Message</button>
          </div>
        </form>

        <div class="alt-contact text-center mt-lg">
          <p class="muted mb-sm">Or reach out directly:</p>
          <div class="social-links">
            <a href="https://linkedin.com/in/forrestmorrisey" target="_blank" rel="noopener noreferrer" class="btn btn-outline">
              LinkedIn
            </a>
            <a href="https://github.com/fmorrisey" target="_blank" rel="noopener noreferrer" class="btn btn-outline">
              GitHub
            </a>
            <a href="https://instagram.com/forrestmorrisey" target="_blank" rel="noopener noreferrer" class="btn btn-outline">
              Instagram
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-form {
    padding: var(--space-lg);
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }
</style>
