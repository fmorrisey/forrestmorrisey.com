---
interface Props {
  quote: string;
  author?: string;
}

const { quote, author } = Astro.props;
---

<blockquote class="quote-block">
  <p class="quote-text">{quote}</p>
  {author && <cite class="quote-author">â€” {author}</cite>}
</blockquote>

<style>
  .quote-block {
    position: relative;
    margin: 48px auto;
    max-width: 700px;
    padding: 32px 48px;
    text-align: center;
    border-left: 3px solid var(--accent);
    background: var(--card);
    border-radius: 0 8px 8px 0;
  }

  .quote-text {
    font-size: 1.25rem;
    font-style: italic;
    line-height: 1.7;
    color: var(--fg);
    margin: 0 0 16px;
  }

  .quote-author {
    font-size: 0.9rem;
    color: var(--muted);
    font-style: normal;
  }
</style>
