---
interface Props {
  currentPath?: string;
}
const { currentPath = "" } = Astro.props;
---

<header class="site-header">
  <div class="header-inner">
    <!-- Left: Hamburger (placeholder, non-functional) -->
    <button class="hamburger" aria-label="Menu" type="button">
      <span class="hamburger-bar"></span>
      <span class="hamburger-bar"></span>
      <span class="hamburger-bar"></span>
    </button>

    <!-- Center: Site title with accent underline -->
    <a href="/" class="site-title-link">
      <span class="site-title">FORREST MORRISEY</span>
      <span class="site-tagline">INNOVATING IN TECH AND DESIGN</span>
    </a>

    <!-- Right: Social icons -->
    <nav class="social-icons" aria-label="Social links">
      <a href="https://instagram.com/forrestmorrisey" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
          <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
        </svg>
      </a>
      <a href="https://linkedin.com/in/forrestmorrisey" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
          <rect x="2" y="9" width="4" height="12"></rect>
          <circle cx="4" cy="4" r="2"></circle>
        </svg>
      </a>
      <a href="https://github.com/fmorrisey" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
        </svg>
      </a>
    </nav>
  </div>

  <!-- Main navigation -->
  <nav class="main-nav" aria-label="Main navigation">
    <a href="/portfolio" class:list={[{ active: currentPath.startsWith('/portfolio') }]}>Portfolio</a>
    <a href="/adventures" class:list={[{ active: currentPath.startsWith('/adventures') }]}>Adventures</a>
    <a href="/photography" class:list={[{ active: currentPath.startsWith('/photography') }]}>Photography</a>
    <a href="/music" class:list={[{ active: currentPath.startsWith('/music') }]}>Music</a>
    <a href="/youtube" class:list={[{ active: currentPath.startsWith('/youtube') }]}>YouTube</a>
    <a href="/writing" class:list={[{ active: currentPath.startsWith('/writing') }]}>Writing</a>
    <a href="/about" class:list={[{ active: currentPath === '/about' }]}>About</a>
    <a href="/contact" class:list={[{ active: currentPath === '/contact' }]}>Contact</a>
  </nav>
</header>

<style>
  .site-header {
    padding: 24px 24px 0;
    text-align: center;
  }

  .header-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding-bottom: 20px;
  }

  .hamburger {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 8px;
    display: flex;
    flex-direction: column;
    gap: 4px;
    opacity: 0.6;
    transition: opacity 0.2s;
  }

  .hamburger:hover {
    opacity: 1;
  }

  .hamburger-bar {
    display: block;
    width: 20px;
    height: 2px;
    background: var(--fg);
  }

  .site-title-link {
    text-decoration: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .site-title {
    font-size: 1.25rem;
    font-weight: 700;
    letter-spacing: 0.25em;
    color: var(--fg);
    text-transform: uppercase;
  }

  .site-tagline {
    font-size: 0.65rem;
    letter-spacing: 0.2em;
    color: var(--muted);
    text-transform: uppercase;
    display: inline-block;
    position: relative;
    padding-bottom: 8px;
  }

  .site-tagline::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 2px;
    background: var(--accent);
  }

  .social-icons {
    display: flex;
    gap: 16px;
  }

  .social-icons a {
    color: var(--fg);
    opacity: 0.7;
    transition: opacity 0.2s, color 0.2s;
  }

  .social-icons a:hover {
    opacity: 1;
    color: var(--accent);
  }

  .main-nav {
    display: flex;
    justify-content: center;
    gap: 32px;
    padding: 16px 0;
    border-top: 1px solid var(--border);
    margin-top: 16px;
  }

  .main-nav a {
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--fg);
    text-decoration: none;
    transition: color 0.2s;
  }

  .main-nav a:hover,
  .main-nav a.active {
    color: var(--accent);
  }

  @media (max-width: 768px) {
    .main-nav {
      flex-wrap: wrap;
      gap: 16px;
    }

    .site-title {
      font-size: 1rem;
    }

    .social-icons {
      gap: 12px;
    }
  }
</style>
